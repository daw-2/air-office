{
    "$schema": "https://raw.githubusercontent.com/infection/infection/0.25.0/resources/schema.json",
    "source": {
        "directories": [
            "app"
        ],
        "excludes": [
            "Console/Kernel.php",
            "Exceptions/Handler.php",
            "Http/Middleware",
            "Providers"
        ]
    },
    "logs": {
        "text": "infection.log"
    },
    "mutators": {
        "@default": true
    },
    "testFramework": "pest",
    "initialTestsPhpOptions": "-d zend_extension=xdebug.so -d memory_limit=-1"
}
